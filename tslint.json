{
  "extends": [
    "tslint:recommended",
    "tslint-plugin-hbs",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],

  "jsRules": {},

  "rules": {
    "check-hbs-template-literals": [
      true,
      { "ConfigFile": "./.eslint-template-lintrc.json" }
    ],
    "prettier": true,
    "max-classes-per-file": [true, 5],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],

    "only-arrow-functions": false,
    "ordered-imports": false
  }
}
